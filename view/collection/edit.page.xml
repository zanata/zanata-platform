<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd">

   <navigation from-action="#{collectionHome.update}">
      <rule if="#{collectionHome.managed}">
         <redirect view-id="/collection/collection.xhtml">
           <param name="slug" value="#{collectionHome.instance.slug}"/>
         </redirect>
      </rule>
   </navigation>

   <navigation from-action="#{collectionHome.persist}">
      <rule if="#{collectionHome.managed}">
         <redirect view-id="/collection/collection.xhtml">
           <param name="slug" value="#{collectionHome.instance.slug}"/>
         </redirect>
      </rule>
   </navigation>

</page>
