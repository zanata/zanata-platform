<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:net.openl10n.flies.webtrans.client">

	<ui:with field='resources' type="net.openl10n.flies.webtrans.client.Resources"/>

	<ui:style type="net.openl10n.flies.webtrans.client.DocumentNode.Styles">
		.body {
			padding: 5px;
			padding-left: 20px;
			border-top: 1px solid #f5f5f5;
			border-bottom: 1px solid #f5f5f5;
		}
		
		.label {
			display: inline;
			font-size: 1.3em;
			padding-left: 10px;
		}
		
		.status {
			display: inline;
			float: right;
			padding-left: 10px;
			width: 25px;
			font-size: xx-small;
			height: 1.1em;
		}
		
		.menu {
			float: right;
		}
		
		.mouseOver {
			background-color: #fcfcfc;
			cursor: pointer;
		}
		
		.selected {
			background-color: #ffbbbb;
			border-top: 1px solid #f5f5f5;
			border-bottom: 1px solid #f5f5f5;
		}
		
		.unitStatus {
			float: right;
			width: 100px;
			height: 1.2em;
		}
		
	</ui:style>
	<g:LayoutPanel ui:field='layoutPanel'>
		<g:layer left="2px" right="104px">
			<g:FlowPanel styleName='{style.body}' ui:field='rootPanel'>
				<g:Image resource='{resources.documentImage}'  />
				<g:Label ui:field='documentLabel' styleName="{style.label}" />
			</g:FlowPanel>
		</g:layer>
		<g:layer right="2px" width="100px">
			<f:TransUnitCountBar ui:field='transUnitCountBar' styleName="{style.unitStatus}"/>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 