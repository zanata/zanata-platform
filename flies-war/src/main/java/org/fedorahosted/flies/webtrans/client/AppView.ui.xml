<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.fedorahosted.flies.webtrans.client"
	xmlns:fui="urn:import:org.fedorahosted.flies.webtrans.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateFilename="AppViewUi"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">
	
	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>
	
	<ui:style>
		.header {
			background-color: #ffffff;
		}
		
		.topPanel-Navigation {
			float: right;
			color: #0203ad;
		}
		.topPanel-Navigation a {
			text-decoration: none;
		}

		.topPanel-Workspace {
			font-size: 1.2em;
			color: white;
			padding: 5px;
		}

		.topPanel-Workspace a{
			color: white;
			font-weight: bold;
			text-decoration: none;
		}

		.userName {
			font-weight: bold;
			color: #ae1f23;
		}
		
		.divider {
			color: #e0e0e0;	
		}
		
		.editor {
			padding-left: 7px;
			background-color: #b4e2ff;
			border: 2px solid #99ccff;
			-moz-border-radius: 10px;
		}
		
	</ui:style>
	<g:LayoutPanel>
		<g:layer top="0px" height="30px">
			<g:LayoutPanel styleName="{style.header}">
				<g:layer top="6px" left="6px" width="18px" height="18px">
					<g:Image resource="{resources.logo}"/>
				</g:layer>
				<g:layer top="6px" height="100%" left="25px" right="6px">
					<g:FlowPanel>
						<g:HTMLPanel styleName="{style.topPanel-Navigation}">
							<nobr>
								<span ui:field="user" class="{style.userName}"><ui:msg description="User Name">User Name</ui:msg></span>
								<span class="{style.divider}">|</span>
								<g:Anchor href="#" ui:field="helpLink"><ui:msg description="Help">Help</ui:msg></g:Anchor>
								<span class="{style.divider}">|</span>
								<g:Anchor href="#" ui:field="leaveLink"><ui:msg description="Leave Workspace">Leave Workspace</ui:msg></g:Anchor>
								<span class="{style.divider}">|</span>
								<g:Anchor href="#" ui:field="signOutLink"><ui:msg description="Sign Out">Sign Out</ui:msg></g:Anchor>
							</nobr>
						</g:HTMLPanel>
					</g:FlowPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer top="30px" height="30px">
			<g:FlowPanel styleName="{resources.style.banner}">
				<g:HTMLPanel styleName="{style.topPanel-Workspace}">
					<nobr>
						<g:Anchor href="#" ui:field="documentsLink"><ui:msg description="Documents">Documents</ui:msg></g:Anchor>
						<span class="{style.divider}">></span>
						<em>
							<span ui:field="selectedDocumentPathSpan"/><span ui:field="selectedDocumentSpan"><ui:msg description="No document selected">No document selected</ui:msg></span>
						</em>
					</nobr>
				</g:HTMLPanel>
			</g:FlowPanel>
		</g:layer>
		<g:layer top="66px" bottom="0px" left='7px' right='7px' >
			<g:SplitLayoutPanel styleName="PageSplitLayoutPanel" ui:field="mainSplitPanel">
				<g:east size="200">
					<g:LayoutPanel ui:field="sidePanelOuterContainer">
						<g:layer top="0px" bottom="8px">
							<g:LayoutPanel ui:field="sidePanelContainer" />
						</g:layer>
					</g:LayoutPanel>
				</g:east>
				<g:center>
					<g:LayoutPanel ui:field="editorContainer" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>