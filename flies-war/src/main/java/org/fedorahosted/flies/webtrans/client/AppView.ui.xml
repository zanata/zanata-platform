<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.fedorahosted.flies.webtrans.client"
	xmlns:fui="urn:import:org.fedorahosted.flies.webtrans.client.ui">
	
	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>
	
	<ui:style>
		.topPanel {
			border-bottom: 1px solid #e0e0e0;
		}
		.header {
			background-color: #ffffff;
		}
		
		.topPanel-Navigation {
			float: right;
			color: #0203ad;
		}
		.topPanel-Navigation a {
			text-decoration: none;
		}

		.topPanel-Workspace {
			display: inline;
			font-size: 1.2em;
			color: white;
			padding: 5px;
		}

		.topPanel-Workspace a{
			color: white;
			font-weight: bold;
			text-decoration: none;
		}
		.topPanel-Workspace-Name {
			color: #6C5353;	
		}
		.topPanel-Workspace-Locale {
			color: #DEAA87;	
		}

		.userName {
			font-weight: bold;
			color: #ae1f23;
		}
		
		.divider {
			color: #e0e0e0;	
		}
		
		.editor {
			padding-left: 7px;
			background-color: #b4e2ff;
			border: 2px solid #99ccff;
			-moz-border-radius: 10px;
		}
		
		.pager {
			text-align: center;	
		}
				
		.transUnitNavigation {
			float:right; 
			display:inline;
		}
		.overBar{
			background: #09305c;
		}
	</ui:style>
	<g:LayoutPanel>
		<g:layer top="0px" height="30px">
			<g:LayoutPanel styleName="{style.header}">
				<g:layer top="6px" left="6px" width="18px" height="18px">
					<g:Image resource="{resources.logo}"/>
				</g:layer>
				<g:layer top="6px" height="100%" left="25px" right="6px">
					<g:FlowPanel>
						<g:HTMLPanel styleName="{style.topPanel-Navigation}">
							<nobr>
								<span ui:field="user" class="{style.userName}">User Name</span>
								<span class="{style.divider}">|</span>
								<g:Anchor href="#" ui:field="helpLink">Help</g:Anchor>
								<span class="{style.divider}">|</span>
								<g:Anchor href="#" ui:field="leaveLink">Leave Workspace</g:Anchor>
								<span class="{style.divider}">|</span>
								<g:Anchor href="#" ui:field="signOutLink">Sign Out</g:Anchor>
							</nobr>
						</g:HTMLPanel>
					</g:FlowPanel>
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer top="30px" height="30px">
			<g:FlowPanel styleName="{style.overBar}">
				<g:HTMLPanel styleName="{style.topPanel-Workspace}">
					<nobr>
						<g:Anchor href="#" ui:field="documentsLink">Documents</g:Anchor>
						<span class="{style.divider}">></span>
						<em><span ui:field="selectedDocumentSpan">No document Selected</span></em>
					</nobr>
				</g:HTMLPanel>
			</g:FlowPanel>
		</g:layer>
		<g:layer top="66px" bottom="0px" left='7px' right='7px' >
			<g:SplitLayoutPanel styleName="PageSplitLayoutPanel" ui:field="mainSplitPanel">
				<g:east size="200">
					<g:LayoutPanel ui:field="sidePanelContainer">
						<g:layer top="0px" bottom="8px">
							<f:SidePanel ui:field="sidePanel"/>	   
						</g:layer>
					</g:LayoutPanel>
				</g:east>
				<g:center>
					<g:LayoutPanel ui:field="editor" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>