<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.fedorahosted.flies.webtrans.client"
	xmlns:fui="urn:import:org.fedorahosted.flies.webtrans.client.ui">

	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>

	<ui:style>
		.unitStatus {
			float: right;
			width: 100px;
			height: 1.2em;
		}
		.mainPanel {
			background-color: #ffffff;
			border: 3px solid #e0e8ee;
			-moz-border-radius: 7px;
			-webkit-border-radius: 7px;
		}
		
	</ui:style>
	
	<g:LayoutPanel styleName="{style.mainPanel}">
		<g:layer top='0px' height='2em' left="0px" right="200px">
			<fui:ClearableTextBox ui:field='filterTextBox' />
		</g:layer>
		<g:layer top='0px' height='2em' right="0px" width="100px">
			<f:TransUnitCountBar ui:field='transUnitCountBar' styleName="{style.unitStatus}"/>
		</g:layer>
		<g:layer top='2em' bottom='0px'>
			<g:ScrollPanel ui:field='documentScrollPanel'>
				<g:FlowPanel ui:field='documentList' />
			</g:ScrollPanel>
		</g:layer>
	</g:LayoutPanel>
	
</ui:UiBinder> 