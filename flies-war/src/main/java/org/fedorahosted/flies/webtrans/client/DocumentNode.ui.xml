<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.fedorahosted.flies.webtrans.client">

	<ui:with field='resources' type="org.fedorahosted.flies.webtrans.client.Resources"/>

	<ui:style type="org.fedorahosted.flies.webtrans.client.DocumentNode.Styles">
		.body {
			padding: 5px;
			padding-left: 20px;
			border-top: 1px solid #f5f5f5;
			border-bottom: 1px solid #f5f5f5;
		}
		
		.label {
			display: inline;
			font-size: 1.3em;
			padding-left: 10px;
		}
		
		.status {
			display: inline;
			float: right;
			padding-left: 10px;
			width: 25px;
			font-size: xx-small;
			height: 1.1em;
		}
		
		.menu {
			float: right;
		}
		
		.mouseOver {
			background-color: #fcfcfc;
		}
		
		.selected {
			background-color: #ffbbbb;
			border-top: 1px solid #f5f5f5;
			border-bottom: 1px solid #f5f5f5;
		}
	</ui:style>
	<g:FlowPanel styleName='{style.body}' ui:field='rootPanel'>
		<g:Image resource='{resources.documentImage}'  />
		<g:Label ui:field='documentLabel' styleName="{style.label}" />
		<g:FlowPanel styleName='{style.menu}'>
			<g:Anchor href='#' ui:field='translateLink'>Translate</g:Anchor>
			<f:TransUnitCountBar ui:field='transUnitCountBar' styleName='{style.status}'/>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 