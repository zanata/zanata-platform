<?xml version="1.0" encoding="UTF-8"?>
<!-- Persistence deployment descriptor for prod profile -->
<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" 
             version="1.0">
             
   <persistence-unit name="flies">
      <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:/fliesDatasource</jta-data-source>
      <properties>
         <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
         <property name="hibernate.hbm2ddl.auto" value="validate"/>
         <property name="hibernate.jdbc.batch_size" value="20"/>
         <property name="hibernate.connection.useUnicode" value="true" />
         <property name="hibernate.connection.characterEncoding" value="UTF-8"/>         
         <property name="jboss.entity.manager.factory.jndi.name" value="java:/fliesEntityManagerFactory"/>
         
         <!-- Enable Hibernate statistics, needs SessionFactory in JNDI for JMX monitoring -->
         <property name="hibernate.generate_statistics" value="true"/>
         <property name="hibernate.session_factory_name" value="SessionFactories/fliesSF"/>
         
      </properties>
   </persistence-unit>
    
</persistence>
