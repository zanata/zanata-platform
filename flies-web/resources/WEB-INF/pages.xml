<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.1.xsd"

       no-conversation-view-id="/home.xhtml"
       login-view-id="/login.xhtml">

	<conversation name="TargetView"
			parameter-name="targetId"
			parameter-value="#{redirect.parameters.targetId != null ? redirect.parameters.targetId : (targetHome.instance.id != null ? targetHome.instance.id : '')}"
			/>

	<conversation name="ProjectView"
			parameter-name="projectId"
			parameter-value="#{redirect.parameters.projectId != null ? redirect.parameters.projectId : (projectHome.instance.id != null ? projectHome.instance.id : '')}" 
			/>

	<conversation name="TranslationWorkspaceView"
			parameter-name="wid"
			parameter-value="#{redirect.parameters.wid != null ? redirect.parameters.wid : (translateAction.workspaceId != null ? translateAction.workspaceId : '')}" 
			/>

	<conversation name="CommunityView"
			parameter-name="communityId"
			parameter-value="#{redirect.parameters.communityId != null ? redirect.parameters.communityId : (communityHome.instance.id != null ? communityHome.instance.id : '')}" 
			/>

    <page view-id="*">
        <navigation>
            <rule if-outcome="home">
                <redirect view-id="/home.xhtml"/>
            </rule>
        </navigation>
    </page>
    
    <page view-id="/project/project.xhtml" conversation="ProjectView">

		<param name="projectId" value="#{projectHome.id}" converterId="javax.faces.Long" />
		
    	<description>#{projectHome.instance.name}</description>
    	
        <action execute="#{projectHome.validateEntityFound}"
            if="#{view.viewId == '/project/project.xhtml' or
                (view.viewId == '/project/edit.xhtml' and projectHome.projectId != null)}"/>
                
        <navigation from-action="#{projectHome.validateEntityFound}">
            <rule if-outcome="invalid">
                <redirect view-id="/project/home.xhtml" >
                    <message severity="WARN">
                        The project you requested does not exist.
                    </message>
                </redirect>
            </rule>
        </navigation>
    	
    </page>

    <page view-id="/project/edit.xhtml" conversation="ProjectView">

	   <navigation from-action="#{projectHome.update}">
	      <rule if="#{projectHome.managed}">
	         <redirect view-id="/project/project.xhtml">
	           <param name="projectId" value="#{projectHome.instance.id}"/>
	         </redirect>
	      </rule>
	   </navigation>
	
	   <navigation from-action="#{projectHome.persist}">
	      <rule if="#{projectHome.managed}">
	         <redirect view-id="/project/project.xhtml">
	           <param name="projectId" value="#{projectHome.instance.id}"/>
	         </redirect>
	      </rule>
	   </navigation>
	
	   <navigation from-action="#{projectHome.cancel}">
	   	  <end-conversation if="#{not projectHome.managed}" before-redirect="true"/>
	      <rule if="#{not projectHome.managed}">
	         <redirect view-id="/project/home.xhtml" />
	      </rule>
	      <rule if="#{projectHome.managed}">
	         <redirect view-id="/project/project.xhtml">
	           <param name="projectId" value="#{projectHome.instance.id}"/>
	         </redirect>
	      </rule>
	   </navigation>
    </page>

    <page view-id="/project/target.xhtml" conversation="TargetView">

    	<description>#{targetHome.instance.name}</description>
    	
        <action execute="#{targetHome.validateEntityFound}"
            if="#{view.viewId == '/project/target.xhtml' or
                (view.viewId == '/project/edit.xhtml' and targetHome.targetId != null)}"/>
                
        <navigation from-action="#{targetHome.validateEntityFound}">
            <rule if-outcome="invalid">
                <redirect view-id="/project/home.xhtml" >
                    <message severity="WARN">
                        The project you requested does not exist.
                    </message>
                </redirect>
            </rule>
        </navigation>
    </page>

    <page view-id="/translate.xhtml" conversation="TranslationWorkspaceView">
    	<description>#{translateAction.workspaceId}</description>
    	<begin-conversation conversation="TranslationWorkspaceView" join="true" if="#{not translateAction.conversationActive}"/>
    	<action execute="#{translateAction.initialize()}" if="#{not translateAction.conversationActive}" />
	</page>


    <page view-id="/community/community.xhtml" conversation="CommunityView">
    	<description>#{communityHome.instance.id}</description>
	</page>

    <page view-id="/community/edit.xhtml" conversation="CommunityView">
	   
	   <navigation from-action="#{communityHome.update}">
	      <rule if="#{communityHome.managed}">
	         <redirect view-id="/community/community.xhtml">
	           <param name="communityId" value="#{communityHome.instance.id}"/>
	         </redirect>
	      </rule>
	   </navigation>
	
	   <navigation from-action="#{communityHome.persist}">
	      <rule if="#{communityHome.managed}">
	         <redirect view-id="/community/community.xhtml">
	           <param name="communityId" value="#{communityHome.instance.id}"/>
	         </redirect>
	      </rule>
	   </navigation>
	   
	   <navigation from-action="#{communityHome.cancel}">
	   	  <end-conversation if="#{not communityHome.managed}" before-redirect="true"/>
	      <rule if="#{not communityHome.managed}">
	         <redirect view-id="/community/home.xhtml" />
	      </rule>
	      <rule if="#{communityHome.managed}">
	         <redirect view-id="/community/community.xhtml">
	           <param name="communityId" value="#{communityHome.instance.id}"/>
	         </redirect>
	      </rule>
	   </navigation>
	   
    </page>

    <exception class="org.jboss.seam.framework.EntityNotFoundException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Record not found</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.EntityNotFoundException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Record not found</message>
        </redirect>
    </exception>

    <exception class="javax.persistence.EntityExistsException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Duplicate record</message>
        </redirect>
    </exception>
    
    <exception class="javax.persistence.OptimisticLockException">
        <end-conversation/>
        <redirect view-id="/error.xhtml">
            <message severity="warn">Another user changed the same data, please try again</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.security.AuthorizationException">
        <redirect view-id="/error.xhtml">
            <message severity="error">You don't have permission to access this resource</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.security.NotLoggedInException">
        <redirect view-id="/login.xhtml">
            <message severity="warn">#{messages['org.jboss.seam.NotLoggedIn']}</message>
        </redirect>
    </exception>
    
    <exception class="javax.faces.application.ViewExpiredException">
        <redirect view-id="/error.xhtml">
            <message severity="warn">Your session has timed out, please try again</message>
        </redirect>
    </exception>
    
    <exception class="org.jboss.seam.ConcurrentRequestTimeoutException" log-level="trace">
      <http-error error-code="503" />
    </exception>
     
    <exception>
        <redirect view-id="/error.xhtml">
            <message severity="error">Unexpected error, please try again</message>
        </redirect>
    </exception>
    
</pages>
