	<target name="roundtripremote">
		<ant antfile="roundtrip.xml" target="_roundtrip">
			<property 
				name="docsUrl" 
				value="${fliesUrl}/seam/resource/restv1/projects/p/${proj}/iterations/i/${iter}/documents" />
		</ant>
	</target>


</project>
