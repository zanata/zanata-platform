        <addForeignKeyConstraint constraintName="FK_HDocumentUpload_ProjectIteration"
                                 baseTableName="HDocumentUpload"
                                 baseColumnNames="projectIterationId"
                                 referencedTableName="HProjectIteration"
                                 referencedColumnNames="id"/>
