            <column name="creationDate" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="lastChanged" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="versionNum" type="integer">
                <constraints nullable="false"/>
