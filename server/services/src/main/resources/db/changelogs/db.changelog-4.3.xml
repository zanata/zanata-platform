<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="aeng@redhat.com">
    <comment>add enabled/username index to HAccount table</comment>
    <createIndex tableName="HAccount" indexName="Idx_enabled_username">
      <column name="enabled"/>
      <column name="username"/>
    </createIndex>
  </changeSet>

  <changeSet author="damason@redhat.com" id="1">
    <comment>Migrate gwt app settings to use distinct key.</comment>
    <!-- All existing keys are for GWT, so no conditions are needed. -->
    <sql>
      UPDATE HAccountOption SET name = CONCAT('gwt.', name)
    </sql>
  </changeSet>

  <changeSet id="2" author="pahuang@redhat.com">
    <comment>create review criteria table ReviewCriteria</comment>
    <createTable tableName="ReviewCriteria">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="creationDate" type="datetime">
        <constraints nullable="false"/>
      </column>
      <column name="lastChanged" type="datetime">
        <constraints nullable="false"/>
      </column>
      <column name="versionNum" type="integer">
        <constraints nullable="false"/>
      </column>
      <column name="priority" type="varchar(32)">
        <constraints nullable="false" />
      </column>
      <column name="description" type="varchar(255)">
      </column>
      <column name="editable" type="boolean" defaultValue="false"/>

    </createTable>
  </changeSet>
</databaseChangeLog>
