<beans xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/beans_1_0.xsd">

  <interceptors>
    <!-- Async/Futureable should be first, because we don't need to run
         the other interceptors in the original thread -->
    <!--DISABLED <class>org.zanata.async.AsyncMethodInterceptor</class>-->
    <!--DISABLED <class>org.apache.deltaspike.core.impl.future.FutureableInterceptor</class>-->
    <class>org.zanata.util.WithRequestScopeInterceptor</class>
    <class>org.zanata.util.SynchronizationInterceptor</class>
    <!--<class>org.apache.deltaspike.jpa.impl.transaction.TransactionalInterceptor</class>-->
    <class>org.apache.deltaspike.security.impl.extension.SecurityInterceptor</class>
  </interceptors>
</beans>
