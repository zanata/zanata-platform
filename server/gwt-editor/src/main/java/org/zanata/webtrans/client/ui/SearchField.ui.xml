<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:fui="urn:import:org.zanata.webtrans.client.ui">

  <ui:style>
    .filterTextBox {
      margin: 0 !important;
    }

    .searchIcon {
      position: absolute;
      left: 0.15em;
      bottom: 0.34em;
    }

    .cancelBtn {
      position: absolute;
      bottom: 0.4em;
      right: 0.1em;
    }

    .container {
      width: 25em;
      position: relative;
      opacity: 0.8;
    }


  </ui:style>
  <g:HTMLPanel styleName="{style.container}">
    <g:InlineLabel styleName="i i--search txt--understated txt--lead {style.searchIcon}" />
    <g:TextBox ui:field="filterTextBox" styleName="{style.filterTextBox} l--pad-h-1" />
    <g:Anchor ui:field="cancelBtn"
      styleName="{style.cancelBtn} i i--cancel txt--lead" />
  </g:HTMLPanel>


</ui:UiBinder>
