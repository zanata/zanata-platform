<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="resources"
    type="org.zanata.webtrans.client.resources.Resources" />

  <ui:style type="org.zanata.webtrans.client.ui.Breadcrumb.Styles">
    a.readOnlyLink, a.readOnlyLink:hover {
      text-decoration: none;
      cursor: default;
    }

    .breadcrumb {
      font-size: 1.1em;
    }
  </ui:style>

  <g:HTMLPanel styleName="bx--inline-block {style.breadcrumb}">
    <g:HTMLPanel tag="i" ui:field="rightChevron"
      styleName="i i--arrow-right" />
    <g:Anchor ui:field="link"/>
  </g:HTMLPanel>
</ui:UiBinder>
