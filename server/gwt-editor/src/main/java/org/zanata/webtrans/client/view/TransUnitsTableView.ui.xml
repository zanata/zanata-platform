<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:with field="messages"
    type="org.zanata.webtrans.client.resources.WebTransMessages" />

  <ui:style>
    .scroll_panel, .scroll_panel>:first-child{
      overflow-x: hidden !important;
    }
  </ui:style>

  <g:ScrollPanel ui:field="root" styleName="{style.scroll_panel}">
    <g:Grid ui:field="transUnitTable" styleName="transUnitTable" />
  </g:ScrollPanel>
</ui:UiBinder>
