<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.zanata.webtrans.client"
	xmlns:fui="urn:import:org.zanata.webtrans.client.ui">

	<ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources" />

	<ui:style>
		.imageButton {
			cursor: pointer;
		}
	
	</ui:style>

	<g:LayoutPanel>
		<g:layer top="0px" bottom="0px">
			<g:SplitLayoutPanel styleName="PageSplitLayoutPanel" ui:field="mainSplitPanel">
				<g:south size="150" min-size="45">
				    <g:LayoutPanel ui:field="southPanelContainer">
				        <g:layer top="0" bottom="5px">
					        <g:TabLayoutPanel ui:field="southPanelTab" barUnit='PX' barHeight='20'/>
                        </g:layer>
				        <g:layer right="3px" top="3px" width="15px" height="15px"> 
                            <g:FlowPanel>
                                <g:Image resource="{resources.upArrowButton}" ui:field="showSouthPanelViewLink" styleName="{style.imageButton}" />
                                <g:Image resource="{resources.minimizeButton}" ui:field="southPanelMinimize" styleName="{style.imageButton}" />
                            </g:FlowPanel>
                        </g:layer>
				    </g:LayoutPanel>
                </g:south>
				<g:center>
					<g:LayoutPanel>
						<g:layer>
							<g:LayoutPanel ui:field="editorContainer" />
						</g:layer>

						<g:layer height="100%" width="60px" right="5px" top="2px">
							<g:FlowPanel>
							    <g:ToggleButton ui:field="toogleOptionsButton"/>
							</g:FlowPanel>
						</g:layer>
					</g:LayoutPanel>
				</g:center>
				<g:east size="208" min-size="20">
					<g:LayoutPanel ui:field="sidePanelOuterContainer">
						<g:layer top="0px" bottom="0px">
							<g:LayoutPanel ui:field="sidePanelContainer" />
						</g:layer>
					</g:LayoutPanel>
				</g:east>
				
			</g:SplitLayoutPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>