<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.zanata.webtrans.client">

	<ui:with field='resources' type="org.zanata.webtrans.client.resources.Resources" />

	<ui:style>
		.sidePanel {
			background-color: #ffffff;
			border: 3px solid #e0e8ee;
			-moz-border-radius: 7px;
			-webkit-border-radius: 7px;
		}
		
	</ui:style>

	<g:LayoutPanel styleName="{style.sidePanel}">
		<g:layer top="0" bottom="170px">
			<g:LayoutPanel>
				<g:layer top='0' height="50%">
					<g:LayoutPanel ui:field="transUnitDetailContainer" />
				</g:layer>
			</g:LayoutPanel>
		</g:layer>
		<g:layer bottom='0px' height='20px'>
			<g:LayoutPanel ui:field="usersPanelContainer" />
		</g:layer>
	</g:LayoutPanel>

</ui:UiBinder> 