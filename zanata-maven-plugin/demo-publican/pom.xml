<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>null</groupId>
  <artifactId>null</artifactId>
  <version>0</version>

  <properties>
    <zanata.srcDir>pot</zanata.srcDir>
    <zanata.transDir>.</zanata.transDir>
  </properties>
 
  <build>
    <plugins>
      <plugin>
        <groupId>org.zanata</groupId>
        <artifactId>zanata-maven-plugin</artifactId>
        <version>1.4-SNAPSHOT</version>
        <configuration>
           <projectType>podir</projectType>
           <srcDir>${zanata.srcDir}</srcDir>
           <transDir>${zanata.transDir}</transDir>
<!-- for instance 
          <importPo>false</importPo>
-->
        </configuration>
      </plugin>
    </plugins>
  </build>
  <pluginRepositories>
    <pluginRepository>
      <id>openl10n-public-repository-group</id>
      <name>OpenL10n Public Repository Group</name>
      <url>http://nexus.openl10n.net/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>
</project>
