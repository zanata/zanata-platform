<configuration>

  <appender name="STDOUT"
    class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%rootException
     </pattern>
    </encoder>
  </appender>

  <logger name="org.hibernate" level="INFO" />

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
