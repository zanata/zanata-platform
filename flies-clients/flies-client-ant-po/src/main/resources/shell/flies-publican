BASEDIR=`dirname $0`/..
BASEDIR=`(cd "$BASEDIR"; pwd)`



# OS specific support.  $var _must_ be set to either true or false.
cygwin=false;
darwin=false;
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  Darwin*) darwin=true
           if [ -z "$JAVA_VERSION" ] ; then
             JAVA_VERSION="CurrentJDK"
           else
             echo "Using Java version: $JAVA_VERSION"
           fi
           if [ -z "$JAVA_HOME" ] ; then
             JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/${JAVA_VERSION}/Home
           fi
           ;;
esac

if [ -z "$JAVA_HOME" ] ; then
  if [ -r /etc/gentoo-release ] ; then
    JAVA_HOME=`java-config --jre-home`
  fi
fi

# For Cygwin, ensure paths are in UNIX format before anything is touched
if $cygwin ; then
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --unix "$JAVA_HOME"`
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --unix "$CLASSPATH"`
fi

# If a specific java binary isn't specified search for the standard 'java' binary
if [ -z "$JAVACMD" ] ; then
  if [ -n "$JAVA_HOME"  ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
      # IBM's JDK on AIX uses strange locations for the executables
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD=`which java`
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly."
  echo "  We cannot execute $JAVACMD"
  exit 1
fi

if [ -z "$REPO" ]
then
  REPO="$BASEDIR"/repo
fi

CLASSPATH=$CLASSPATH_PREFIX:"$BASEDIR"/etc:"$REPO"/org/fedorahosted/flies/flies-adapter-po/1.0-SNAPSHOT/flies-adapter-po-1.0-SNAPSHOT.jar:"$REPO"/org/fedorahosted/tennera/jgettext/0.6/jgettext-0.6.jar:"$REPO"/antlr/antlr/2.7.6/antlr-2.7.6.jar:"$REPO"/commons-codec/commons-codec/1.3/commons-codec-1.3.jar:"$REPO"/commons-lang/commons-lang/2.3/commons-lang-2.3.jar:"$REPO"/org/fedorahosted/flies/flies-rest-api/1.0-SNAPSHOT/flies-rest-api-1.0-SNAPSHOT.jar:"$REPO"/org/fedorahosted/flies/flies-common-api/1.0-SNAPSHOT/flies-common-api-1.0-SNAPSHOT.jar:"$REPO"/com/google/collections/google-collections/1.0-rc2/google-collections-1.0-rc2.jar:"$REPO"/org/jboss/resteasy/resteasy-jaxrs/1.1.GA/resteasy-jaxrs-1.1.GA.jar:"$REPO"/org/jboss/resteasy/jaxrs-api/1.1.GA/jaxrs-api-1.1.GA.jar:"$REPO"/commons-httpclient/commons-httpclient/3.1/commons-httpclient-3.1.jar:"$REPO"/commons-logging/commons-logging/1.1/commons-logging-1.1.jar:"$REPO"/org/slf4j/slf4j-api/1.5.10/slf4j-api-1.5.10.jar:"$REPO"/org/jboss/resteasy/resteasy-jaxb-provider/1.1.GA/resteasy-jaxb-provider-1.1.GA.jar:"$REPO"/com/sun/xml/bind/jaxb-impl/2.1.10/jaxb-impl-2.1.10.jar:"$REPO"/javax/xml/bind/jaxb-api/2.1/jaxb-api-2.1.jar:"$REPO"/javax/xml/stream/stax-api/1.0/stax-api-1.0.jar:"$REPO"/javax/activation/activation/1.1/activation-1.1.jar:"$REPO"/com/sun/xml/fastinfoset/FastInfoset/1.2.7/FastInfoset-1.2.7.jar:"$REPO"/com/sun/xml/stream/sjsxp/1.0.1/sjsxp-1.0.1.jar:"$REPO"/org/codehaus/jettison/jettison/1.1/jettison-1.1.jar:"$REPO"/org/jboss/resteasy/resteasy-atom-provider/1.1.GA/resteasy-atom-provider-1.1.GA.jar:"$REPO"/org/fedorahosted/flies/flies-rest-client/1.0-SNAPSHOT/flies-rest-client-1.0-SNAPSHOT.jar:"$REPO"/org/jboss/resteasy/resteasy-multipart-provider/1.1.GA/resteasy-multipart-provider-1.1.GA.jar:"$REPO"/javax/mail/mail/1.4/mail-1.4.jar:"$REPO"/org/apache/james/apache-mime4j/0.6/apache-mime4j-0.6.jar:"$REPO"/org/apache/ant/ant/1.7.1/ant-1.7.1.jar:"$REPO"/org/apache/ant/ant-launcher/1.7.1/ant-launcher-1.7.1.jar:"$REPO"/org/slf4j/slf4j-log4j12/1.5.10/slf4j-log4j12-1.5.10.jar:"$REPO"/log4j/log4j/1.2.14/log4j-1.2.14.jar:"$REPO"/org/cyclopsgroup/jcli/1.0-alpha-4/jcli-1.0-alpha-4.jar:"$REPO"/commons-beanutils/commons-beanutils/1.7.0/commons-beanutils-1.7.0.jar:"$REPO"/logkit/logkit/1.0.1/logkit-1.0.1.jar:"$REPO"/avalon-framework/avalon-framework/4.1.3/avalon-framework-4.1.3.jar:"$REPO"/javax/servlet/servlet-api/2.3/servlet-api-2.3.jar:"$REPO"/org/cyclopsgroup/caff/0.1/caff-0.1.jar:"$REPO"/jline/jline/0.9.94/jline-0.9.94.jar:"$REPO"/org/fedorahosted/flies/flies-client-ant-po/1.0-SNAPSHOT/flies-client-ant-po-1.0-SNAPSHOT.jar
EXTRA_JVM_ARGUMENTS=""

# For Cygwin, switch paths to Windows format before running java
if $cygwin; then
  [ -n "$CLASSPATH" ] && CLASSPATH=`cygpath --path --windows "$CLASSPATH"`
  [ -n "$JAVA_HOME" ] && JAVA_HOME=`cygpath --path --windows "$JAVA_HOME"`
  [ -n "$HOME" ] && HOME=`cygpath --path --windows "$HOME"`
  [ -n "$BASEDIR" ] && BASEDIR=`cygpath --path --windows "$BASEDIR"`
  [ -n "$REPO" ] && REPO=`cygpath --path --windows "$REPO"`
fi

exec "$JAVACMD" $JAVA_OPTS \
  $EXTRA_JVM_ARGUMENTS \
  -classpath "$CLASSPATH" \
  -Dapp.name="flies-publican" \
  -Dapp.pid="$$" \
  -Dapp.repo="$REPO" \
  -Dbasedir="$BASEDIR" \
  org.fedorahosted.flies.client.ant.po.PoTool \
  "$@"
